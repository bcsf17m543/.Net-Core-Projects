@model List<My_Blog_Application.Models.Blog>

@{
    ViewData["Title"] = "ViewMyBlogs";
}

<h1>My Blogs</h1>

<table class="table  table-striped table-hover table-striped">
    <thead>
        <tr border border-dark>
            <th>
                Date
            </th>
            <th>
                Title
            </th>
            <th>
                Content
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr border border-dark>
            <th>
                @item.blog_Id
            </th>
            <td>
                @item.Date
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Content
            </td>
            <td>
                <a class="btn btn-warning btn-lg btn-block" asp-action="Edit" asp-route-id="@item.blog_Id">Edit </a>
                <a class="btn btn-danger btn-lg btn-block" asp-action="Remove" asp-route-id="@item.blog_Id">Remove</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="HomePage">Main Menu</a>

</div>
